      +team-slide('01', 'Шурховецкий', 'Иван Викторович',      'врач стоматолог, ортопед, терапевт, хирург')
      +team-slide('02', 'Курушкин',    'Андрей Андреевич',     'главный врач, имплантолог, ортопед')
      +team-slide('03', 'Лебедев',     'Александр Михайлович', 'врач стоматолог')
      +team-slide('04', 'Оперманас',   'Анна Сергеевна',       'врач-стоматолог, терапевт')
      +team-slide('05', 'Филипова',    'Нина Юрьевна',         'главный врач, имплантолог, ортопед')
      +team-slide('06', 'Знаюненко',   'Александра Игоревна',  'врач ортодонт')
